{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "es5",
        "tabWidth": 2,
        "printWidth": 120,
        "code": 80,
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreStrings": false,
        "ignoreTemplateLiterals": false
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx"],
      "rules": {}
    }
  ]
}
